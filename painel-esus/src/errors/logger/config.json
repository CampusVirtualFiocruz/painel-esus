{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(pathname)s.%(funcName)s:%(lineno)d - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "json": {
      "()": "src.errors.logger.json_handler.JSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    },
    "csv_formatter": {
      "()": "src.errors.logger.csv_handler.CsvFormatter",
      "fmt_keys": {
        "asctime":"asctime",
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "src.errors.logger.json_handler.JSONFileHandler",
      "filename": "painel_esus_log.jsonl",
      "formatter": "json",
      "when": "M",
      "interval": 1,
      "backupCount": 5,
      "encoding": "utf-8",
      "mode": "a"
    },
    "csv": {
      "class": "src.errors.logger.csv_handler.CsvFileHandler",
      "formatter": "csv_formatter",
      "filename": "painel_esus_log.csv",
      "when": "M",
      "interval": 1,
      "backupCount": 5
    }
  },
  "loggers": {
    "root": {
      "level": "INFO"
    }
  },
  "root": {
    "handlers": ["csv"]
  }
}
